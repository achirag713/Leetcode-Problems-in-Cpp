class Solution {
public:
    int height(TreeNode* root, int& diameter){
        if(!root) return 0;
        int l=height(root->left, diameter);
        int r=height(root->right, diameter);

        diameter=max(diameter,l+r);
        return 1+max(l,r);

    }
    int diameterOfBinaryTree(TreeNode* root) {
        int diameter=0;
        height(root,diameter);
        return diameter;
    }
};
